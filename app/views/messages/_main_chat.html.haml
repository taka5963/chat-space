.chat-main
  .chat-main__group-info
    .chat-main__group-info__group-detail
      .chat-main__group-info__group-detail__group-name
        test
      .chat-main__group-info__group-detail__member-name
        masa
    .chat-main__group-info__edit-box
      .chat-main__group-info__edit-box__edit
        = link_to "#", class: "chat-main__group-info__edit-box__edit__btn" do
          Edit
  .chat-main__message-main
    .chat-main__message-main__message-box
      .chat-main__message-main__message-box__message-info
        .chat-main__message-main__message-box__message-info__message-name
          masa
        .chat-main__message-main__message-box__message-info__message-date
          2019/11/20(wed) 17:43:01
